<!DOCTYPE html>
<html lang="en">
<head>
    {% block stylesheets %}
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="msapplication-tap-highlight" content="no">
    <meta name="description" content="Cryptizy permet d'acheter et de détenir très facilement des cryptos. ">
    <meta name="keywords" content="cryptomonnaie, crypto, bitcoin, ethereum, ripple, lumen, litecoin, bitcoin cash, zcash, zec, eth, etc, btc, bch, ltc, zec, xrp, xlm, cryptocurrency">
    <title>Cryptizy</title>
    <link rel="icon" href="{{ asset('assets/user/img/favicon.png') }}" sizes="32x32">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('assets/user/img/favicon.png') }}">
    <meta name="msapplication-TileColor" content="#00bcd4">
    <meta name="msapplication-TileImage" content="{{ asset('assets/user/img/favicon.png') }}">
    <link href="{{ asset('assets/user/office/css/materialize.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('assets/user/office/css/style.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('assets/user/office/css/custom.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('assets/user/office/css/sweetalert.css') }}" type="text/css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="{{ asset('assets/user/office/css/perfect-scrollbar.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('assets/user/office/css/jquery-jvectormap.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('assets/user/office/css/flag-icon.min.css') }}" type="text/css" rel="stylesheet">
    {% endblock %}
</head>

<body id="login">
{% block header %}
    <header id="header" class="page-topbar">
        <!-- start header nav-->
        <div class="navbar-fixed">
            <nav class="navbar-color">
                <div class="nav-wrapper">
                    <ul class="right hide-on-med-and-down">
                        <li>
                            <a href="javascript:void(0);" class="waves-effect waves-block waves-light profile-button" data-activates="profile-dropdown">
                              <span class="avatar-status avatar-online">
                                  {% if app.user is defined and app.user is not null %}
                                      {% if app.user.genre == 'H' %}
                                          <img src="{{ asset('assets/user/office/img/boy.png') }}" alt="avatar">
                                    {% else %}
                                          <img src="{{ asset('assets/user/office/img/girl.png') }}" alt="avatar">
                                      {% endif %}
                                  {% endif %}
                                  <i></i>
                              </span>
                            </a>
                        </li>
                    </ul>
                    <!-- profile-dropdown -->
                    <ul id="profile-dropdown" class="dropdown-content">
                        <li class="divider"></li>
                        <li>
                            <a href="{{ url('logout') }}" class="grey-text text-darken-1">
                                <div class="chip">
                                    <i class="close material-icons">close</i>Logout
                                </div>
                            </a>
                        </li>
                        <li>
                            {% if (app.request.getLocale()) == 'fr' %}
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">
                                    <img src="{{ asset('assets/user/img/gb.svg') }}" alt="flag_en" style="width: 43px;">
                                </a>
                            {% endif %}
                            {% if (app.request.getLocale()) == 'en' %}
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">
                                    <img src="{{ asset('assets/user/img/fr.svg') }}" alt="flag_fr" style="width: 43px;">
                                </a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <!-- END HEADER -->
{% endblock %}
<div id="main">
    <!-- START WRAPPER -->
    <div class="wrapper">
        <!-- START LEFT SIDEBAR NAV-->
        {% block nav %}
            <aside id="left-sidebar-nav" class="nav-expanded nav-lock nav-collapsible">
                <div class="brand-sidebar">
                    <h1 class="logo-wrapper">
                        <a href="#" class="brand-logo darken-1">
                            <img src="{{ asset('assets/user/office/img/logo.png') }}" alt="cryptizy logo">
                        </a>
                        <a href="#" class="navbar-toggler">
                            <i class="material-icons">radio_button_checked</i>
                        </a>
                    </h1>
                </div>
                <ul id="slide-out" class="side-nav fixed leftside-navigation">
                    <li class="no-padding">
                        <ul class="collapsible" data-collapsible="accordion">
                            <li class="bold">
                                <a class="waves-effect waves-cyan active" href="{{ url('dashboard') }}">
                                    <i class="material-icons">dashboard</i>
                                    <span class="nav-text">{{ 'menu.admin.tableau_bord'|trans }}</span>
                                </a>
                            </li>
                            <li class="bold">
                                <a href="{{ url('list_user') }}" class="waves-effect waves-cyan">
                                    <i class="material-icons">account_circle</i>
                                    <span class="nav-text">{{ 'menu.admin.utilisateur'|trans }}</span>
                                </a>
                            </li>
                            <li class="bold">
                                <a class="waves-effect waves-cyan active" href="{{ url('sales') }}">
                                    <i class="material-icons">arrow_downward</i>
                                    <span class="nav-text">{{ 'menu.admin.sales'|trans }}</span>
                                </a>
                            </li>
                            <li class="bold">
                                <a class="waves-effect waves-cyan active" href="{{ url('list_depot_online') }}">
                                    <i class="material-icons">arrow_downward</i>
                                    <span class="nav-text">{{ 'menu.admin.depot'|trans }}</span>
                                </a>
                            </li>
                            <li class="bold">
                                <a class="waves-effect waves-cyan active" href="{{ url('history') }}">
                                    <i class="material-icons">history</i>
                                    <span class="nav-text"> {{ 'menu.admin.historique'|trans }} </span>
                                </a>
                            </li>
                            <li class="bold">
                                <a class="waves-effect waves-cyan active" href="{{ url('history_sell') }}">
                                    <i class="material-icons">history</i>
                                    <span class="nav-text">{{ 'menu.admin.historique_vente'|trans }}</span>
                                </a>
                            </li>
                            <li class="bold">
                                <a class="waves-effect waves-cyan active" href="{{ url('list_depot') }}">
                                    <i class="material-icons">history</i>
                                    <span class="nav-text">Historique de depot</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ url('transfertAdmin') }}" class="waves-effect waves-cyan">
                                    <i class="close material-icons">swap_horiz</i>
                                    <span class="nav-text">{{ 'menu.admin.transfert'|trans }}</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ url('retraitAdmin') }}" class="waves-effect waves-cyan">
                                    <i class="close material-icons">system_update_alt</i>
                                    <span class="nav-text">{{ 'menu.admin.retraits'|trans }}</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ url('adminBlog') }}" class="waves-effect waves-cyan">
                                    <i class="close material-icons">description</i>
                                    <span class="nav-text">Blog</span>
                                </a>
                            </li>
                            <li>
                                <a href="{{ url('logout') }}" class="waves-effect waves-cyan">
                                    <i class="close material-icons">close</i>
                                    <span class="nav-text">{{ 'menu.admin.deconnexion'|trans }}</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <a href="#" data-activates="slide-out" class="sidebar-collapse btn-floating btn-medium waves-effect waves-light hide-on-large-only gradient-45deg-light-blue-cyan gradient-shadow">
                    <i class="material-icons">menu</i>
                </a>
            </aside>
        {% endblock %}

        {% block body %}{% endblock %}
    </div>
</div>

{% block footer %}
    <!-- START FOOTER -->
    <footer class="page-footer">
        <div class="footer-copyright">
            <div class="container"></div>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/user/office/js/jquery-3.1.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/user/office/js/perfect-scrollbar.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/user/office/js/chart.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/user/office/js/plugins.js') }}"></script>
    <script src="{{ asset('assets/user/office/js/hopscotch.js') }}"></script>
    <script src="{{ asset('assets/user/office/js/my_first_tour.js') }}"></script>
    <script src="{{ asset('assets/user/office/js/materialize.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('.modal').modal();
            $('.chips').material_chip();
        });
    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-112839619-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-112839619-1');
    </script>
{% endblock %}
</body>
</html>